<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.se181.SplashScreen"
          prefHeight="400.0" prefWidth="600.0"
          styleClass="root"
          alignment="TOP_CENTER">

    <padding>
        <Insets top="15" right="25" bottom="10" left="25"/>
    </padding>

    <Text fx:id="screenTitle"
          text="Welcome to Chess!"
          GridPane.rowIndex="0"/>

    <HBox style="-fx-padding: 50 50 50 50;"
          GridPane.rowIndex="30"
          alignment="CENTER">
        <Button text="Start"
                onAction="#startButtonAction"/>
    </HBox>

    <stylesheets>
        <URL value="@/css/mainStyle.css"/>
    </stylesheets>

</GridPane>
